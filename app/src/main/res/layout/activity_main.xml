<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline_head"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/login_textviev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#E0E0E0"
            android:text="Login"
            android:textSize="50dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/login_edittext"
            app:layout_constraintTop_toBottomOf="@id/login_textviev"
            android:textColor="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:backgroundTint="@color/white"

            />
        <TextView
            android:id="@+id/password_textviev"
            android:textColor="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/login_edittext"
            android:gravity="center"
            android:text="Password"
            android:textSize="50dp"
            />

        <EditText
            android:id="@+id/password_edittext"
            app:layout_constraintTop_toBottomOf="@id/password_textviev"
            android:textColor="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/white"


            />

        <TextView
            android:id="@+id/server_textviev"
            android:textColor="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/password_edittext"
            android:gravity="center"
            android:text="Server"
            android:textSize="50dp"
            />

        <EditText
            android:id="@+id/server_edittext"
            app:layout_constraintTop_toBottomOf="@id/server_textviev"
            android:textColor="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/white"
            />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/server_textviev"
            android:layout_marginTop="100dp"
            android:text="Sign in"
            android:backgroundTint="#1E2A3A"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


    <TextView
        android:id="@+id/textAppName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1F1F1F"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#E0E0E0"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>